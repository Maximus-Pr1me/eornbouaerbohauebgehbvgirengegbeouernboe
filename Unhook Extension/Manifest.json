{
   "author": "Unhook",
   "background": {
      "persistent": true,
      "scripts": [ "js/background.js" ]
   },
   "browser_action": {
      "default_icon": "images/icon-128.png",
      "default_popup": "popup.html",
      "default_title": "Unhook"
   },
   "content_scripts": [ {
      "all_frames": true,
      "css": [ "css/content.css" ],
      "js": [ "js/content.js" ],
      "matches": [ "https://www.youtube.com/*", "https://m.youtube.com/*" ],
      "run_at": "document_start"
   } ],
   "description": "Hide YouTube related videos, comments, shorts tab, suggestions wall, homepage recommendations, trending, and other distractions.",
   "icons": {
      "128": "images/icon-128.png",
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png"
   },
   "manifest_version": 2,
   "minimum_chrome_version": "49",
   "name": "Unhook - Remove YouTube Recommended Videos",
   "permissions": [ "storage", "webRequest", "https://www.youtube.com/*", "https://m.youtube.com/*" ],
   "short_name": "Unhook",
   "version": "1.6.2",
   "web_accessible_resources": [ "js/unhook-yt.js" ]
}
